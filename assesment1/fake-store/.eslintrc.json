{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": ["error", {}, { "usePrettierrc": true }],
    //ðŸ’¡Permitir arrow function
    "react/function-component-definition": [
      2,
      { "namedComponents": "arrow-function" }
    ],
    //ðŸ’¡Eliminar tipado de las props
    "react/prop-types": [0],
    //ðŸ’¡Evita que falte React al usar JSX
    "react/react-in-jsx-scope": 0,
    "react/jsx-uses-react": 0,
    //ðŸ’¡permitir extensiones jsx
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    //ðŸ’¡permitir iteradores
    "no-restricted-syntax": [
      "error",
      "FunctionExpression",
      "WithStatement",
      "BinaryExpression[operator='in']"
    ],
    //ðŸ’¡permitir alert y confirm (provicional)
    "no-alert": "off"
  }
}
